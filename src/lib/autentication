import { getAuth, createUserWithEmailAndPassword } from 'firebase/auth';

const email = document.getElementById('email').value;
const password = document.getElementById('password').value;
const validPassword = document.getElementById('validatePassword');
const validEmail = document.getElementById('validateEmail').value;

function validateData() {
  if (email.length < 8) {
    return validPassword.innerText('Por favor, ingresa un correo electrónico válido.');
  } if (email.length >= 8) {
    return true;
  } if (password.length < 8) {
    return validEmail.innerText('Tu contraseña debe contener al menos 8 caracteres');
  } if (password.length >= 8) {
    return true;
  }
}



const auth = getAuth();
createUserWithEmailAndPassword(auth, email, password)
  .then((userCredential) => {
    // Signed in
    const user = userCredential.user;
    // ...
  })
  .catch((error) => {
    const errorCode = error.code;
    const errorMessage = error.message;
    // ..
  });

export { validateData };
